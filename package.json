{
  "name": "oracle-tournament-app",
  "version": "1.0.0",
  "description": "Oracle Trials shared datastore API and front-end",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "test": "node --test",
    "validate:env": "node scripts/validate-env.js",
    "supabase:bootstrap": "node scripts/bootstrap-supabase.js",
    "supabase:seed:tables": "node scripts/seed-supabase-tables.js",
    "player-access:list": "node scripts/manage-player-access.js list",
    "player-access:add": "node scripts/manage-player-access.js add",
    "dev": "esbuild site/scripts/main.js --bundle --outfile=site/dist/app.js --format=iife --sourcemap --target=es2019 --watch",
    "build": "esbuild site/scripts/main.js --bundle --outfile=site/dist/app.js --format=iife --sourcemap --target=es2019 --minify",
    "lint:api": "eslint \"api/**/*.js\" \"scripts/**/*.js\" --max-warnings=0",
    "lint:frontend": "eslint \"site/**/*.{js,jsx,ts,tsx,html}\" --ignore-pattern \"site/dist/**\" --max-warnings=0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "node-fetch": "^2.6.13"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "eslint": "^9.0.0",
    "supertest": "^6.3.3"
  }
}
