# Copy this file to `scripts/.env` when running any Supabase helper scripts.
# These values mirror the API configuration, but they live next to the scripts
# so you can keep deployment credentials separate from local dev values.

# REQUIRED: Base URL for your Supabase project
SUPABASE_URL=https://your-project.supabase.co

# REQUIRED: Service role key with read/write access
SUPABASE_SERVICE_ROLE_KEY=service-role-key

# Storage driver (`json` for single row, `tables` for normalized schema)
SUPABASE_STORAGE_MODE=json

# Optional override for the SQL file used by `npm run supabase:bootstrap`
# SUPABASE_SQL_PATH=/absolute/path/to/custom.sql

# Table/row names (only needed when you deviated from the defaults)
SUPABASE_TABLE=oracle_state
SUPABASE_ROW_ID=shared
SUPABASE_SESSIONS_TABLE=sessions
SUPABASE_SESSION_PLAYERS_TABLE=session_players
SUPABASE_ROSTER_EXTRAS_TABLE=roster_extras
SUPABASE_ROSTER_META_TABLE=roster_meta
SUPABASE_AVAILABILITY_TABLE=availability
SUPABASE_BUILD_CARDS_TABLE=build_cards
SUPABASE_COMMENTS_TABLE=comments
SUPABASE_PLAYER_ACCESS_TABLE=player_access
